@page
@model WebApp.Pages.MachinePages.ListModel
@{
    ViewData["Title"] = "List All";
}

<div class="container">
    <div class="text-center mb-3">
        <a class="btn btn-primary" role="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Create new machine." asp-page="./Create">Create</a>
    </div>
    <div>
        @for (int i = 0; i < Model.Machine.Count; i++)
        {
        <table class="table table-striped table-bordered w-auto">
            <thead>
                <tr>
                    <th scope="col">Machine ID</th>
                    <th scope="col">Machine Name</th>
                    <th scope="col">Machine Balance</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <tr>
                    <th data-bs-toggle="tooltip" data-bs-placement="top" title="Click to show products.">
                        <button 
                            class="btn btn-primary" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#machine-@i" 
                            aria-expanded="false" 
                            aria-controls="machine-@i">
                        @i
                        </button>
                    </th>
                    <td>@Model.Machine[i].MachineName</td>
                    <td>@Model.Machine[i].MachineBalance.ToString("C")</td>
                    <td>
                        <a class="btn btn-primary" role="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Update this Machine." asp-page="./Update" asp-route-id="@Model.Machine[i].MachineId">Update</a>
                        <a class="btn btn-primary" role="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete this Machine." asp-page="./Delete" asp-route-id="@Model.Machine[i].MachineId">Delete</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="4">
                        <table class="table table-striped table-bordered w-auto collapse caption-top table-hover" id="machine-@i">
                            <caption class="text-center w-auto fs-6 fw-bold">Product List</caption>
                            <thead>
                                <tr>   
                                    <th class="col">Product ID</th>
                                    <th class="col">Product Name</th>
                                    <th class="col">Product Price</th>
                                    <th class="col">Product Quantity</th>
                                    <th class="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int j = 0; j < Model.Machine[i].MachineProductList.Count; j++)
                                {
                                <tr>
                                    <th>@j</th>
                                    <td>@Model.Machine[i].MachineProductList[j].ProductName</td>
                                    <td>@Model.Machine[i].MachineProductList[j].ProductPrice.ToString("C")</td>
                                    <td>@Model.Machine[i].MachineProductList[j].ProductQuantity</td>
                                    <td>
                                        <a class="btn btn-primary" role="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Update this product." asp-page="/ProductPages/Update" asp-route-id="@Model.Machine[i].MachineProductList[j].ProductId">Update</a>
                                        <a class="btn btn-primary" role="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete this product." asp-page="/ProductPages/Delete" asp-route-id="@Model.Machine[i].MachineProductList[j].ProductId">Delete</a>
                                    </td>
                                </tr>
                                }
                                <tr>
                                    <td class="text-end" colspan="5">
                                        <a class="btn btn-primary" role="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Add new product." asp-page="/ProductPages/Create">Add</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
        }
    </div>
</div>

